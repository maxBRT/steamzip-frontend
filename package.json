{
    "name": "bun-react-template",
    "version": "0.1.0",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "bun run build && wrangler pages dev dist --d1=DB",
        "build": "bun build ./src/index.html --outdir=dist --sourcemap --target=browser --minify --define:process.env.NODE_ENV='\"production\"' --env='BUN_PUBLIC_*'",
        "deploy": "bun run build && wrangler pages deploy dist"
    },
    "dependencies": {
        "react": "^19",
        "react-dom": "^19"
    },
    "devDependencies": {
        "@cloudflare/workers-types": "^4.20260218.0",
        "@types/bun": "latest",
        "@types/react": "^19",
        "@types/react-dom": "^19",
        "wrangler": "^4.66.0"
    }
}
